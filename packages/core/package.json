{
  "name": "@flighthq/core",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./Matrix": {
      "types": "./dist/geom/Matrix.d.ts",
      "default": "./dist/geom/Matrix.js"
    },
    "./geom/Matrix": {
      "types": "./dist/geom/Matrix.d.ts",
      "default": "./dist/geom/Matrix.js"
