    "./geom/Point": {
      "types": "./dist/geom/Point.d.ts",
      "default": "./dist/geom/Point.js"
    },
    "./Rectangle": {
      "types": "./dist/geom/Rectangle.d.ts",
      "default": "./dist/geom/Rectangle.js"
    },
    "./geom/Rectangle": {
      "types": "./dist/geom/Rectangle.d.ts",
