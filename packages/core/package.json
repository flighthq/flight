    "./Vector3D": {
      "types": "./dist/geom/Vector3D.d.ts",
      "default": "./dist/geom/Vector3D.js"
    },
    "./geom/Vector3D": {
      "types": "./dist/geom/Vector3D.d.ts",
      "default": "./dist/geom/Vector3D.js"
